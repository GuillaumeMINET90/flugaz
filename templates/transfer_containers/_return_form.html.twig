{{ form_start(form) }}
<div class="grow-0 shrink-0 basis-auto my-4 w-full px-3 lg:px-6 mb-12 xl:mb-0 justify-center">
    <div>

        <div class="grid justify-center">
            <div class="form-widget">
                <label for="transfer_container_used_gaz" class="form-label inline-block text-gray-600">
                    Fournisseur
                </label>
                {{ form_row(form.vendor)}}    
            </div>
        </div>
        <div class="grid justify-center">
            <div class="form-widget">
                <label for="transfer_container_used_total_weight" class="form-label inline-block text-gray-600">
                    Date de retour <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.return_date)}} 
            </div>
        </div>


        {{ form_row(form._token) }}
        <div class="flex space-x-2 mt-3 justify-center">
            <div>
                <button type="button" onclick="window.location.href = '{{ path('app_transfer_containers_index') }}'" class="btn-blue-return"> 
                    Retour liste
                </button>

                <button type="submit" class="btn-green-validation">
                    Sauvegarder
                </button>
            </div>
        </div>
    </div>
</div>
  
{{ form_end(form) }}
