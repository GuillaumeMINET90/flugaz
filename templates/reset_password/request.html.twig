{% extends 'baseLogin.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="container mx-auto mt-24 px-4">
    <div class="grid w-full justify-center">
        <div>
            <img class="mx-auto h-16 w-auto" src="{{ asset('images/icon_fg.png')}}" alt="Application FLUGAZ">
        </div>
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="text-2xl text-center text-gray-800 font-bold my-12 ">
            Réinitialisation mot de passe
        </h1>
    </div>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <p class="mt-3 italic">
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </p>
        </div>

        <button class="btn-green-validation mt-8">Envoyer</button>
    {{ form_end(requestForm)}}

</div>



     
{% endblock %}
