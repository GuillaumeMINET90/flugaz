{% extends 'base.html.twig' %}

{% block title %}Vendors index{% endblock %}

{% block body %}
    <h1>Vendors index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Street</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>Is_active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vendor in vendors %}
            <tr>
                <td>{{ vendor.id }}</td>
                <td>{{ vendor.name }}</td>
                <td>{{ vendor.street }}</td>
                <td>{{ vendor.postalCode }}</td>
                <td>{{ vendor.city }}</td>
                <td>{{ vendor.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_vendors_show', {'id': vendor.id}) }}">show</a>
                    <a href="{{ path('app_vendors_edit', {'id': vendor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vendors_new') }}">Create new</a>
{% endblock %}
