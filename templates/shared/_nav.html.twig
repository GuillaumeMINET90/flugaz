<div class="relative">
    <div class="fixed top-0 left-0 right-0">
        <nav class=" w-full flex place-content-around items-center py-3 bg-blue-500 text-gray-500 shadow-lg">
            {# <div class=" flex container-fluid justify-around items-center w-full "> #}
               

                    <button type="button" onclick="window.location.href = '{{ path('app_menu') }}'" class="inline-block px-3 py-2 border-2 border-slate-50 text-slate-50 font-medium text-xs leading-tight uppercase rounded-full hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
                        <i class="text-white bi bi-house text-xl"></i>
                    </button>
                    {% if new is defined %}                 
                        {% if new == 'newContainer' %}
                        <button type="button" onclick="window.location.href = '{{ path('app_new_containers_new') }}'" class="inline-block px-3 py-2 border-2 border-slate-50 text-slate-50 font-medium text-xs leading-tight uppercase rounded-full hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
                            <i class="text-white bi bi-plus-lg text-lg"></i>
                        </button>
                        {% endif %}

                        {% if new == 'transferContainer' %}
                        <button type="button" onclick="window.location.href = '{{ path('app_transfer_containers_new') }}'" class="inline-block px-3 py-2 border-2 border-blue-900 text-blue-900 font-medium text-xs leading-tight uppercase rounded-full hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
                            <i class="text-blue-900 bi bi-plus-lg text-lg"></i>
                        </button>
                        {% endif %}

                        {% if new == 'recoveryContainer' %}
                        <button type="button" onclick="window.location.href = '{{ path('app_recovery_containers_new') }}'" class="inline-block px-3 py-2 border-2 border-green-500 text-geen-500  font-bold text-xs leading-tight uppercase rounded-full hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
                            <i class="text-green-500  bi bi-plus-lg text-lg"></i>
                        </button>
                        {% endif %}
                       
                    {% endif %} 
                    {% if cont is defined %}                 
                        {% if cont == 'newCont' %}
                        <button type="button" onclick="window.location.href = '{{ path('app_new_containers_index') }}'" class="inline-block px-3 py-2 border-2 border-slate-50 text-slate-50 font-medium text-xs leading-tight uppercase rounded-full hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
                            <i class="text-white bi bi-list-ul text-lg"></i>
                        </button>
                        {% endif %}


                        {% if cont == 'recoveryCont' %}
                        <button type="button" onclick="window.location.href = '{{ path('app_recovery_containers_index') }}'" class="inline-block px-3 py-2 border-2 border-green-500 text-geen-500  font-bold text-xs leading-tight uppercase rounded-full hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
                            <i class="text-green-500 bi bi-list-ul text-lg"></i>
                        </button>
                        {% endif %}
                       
                    {% endif %} 
                    {% if param is defined  %}
                        <button type="button" onclick="window.location.href = '{{ path('app_user_param') }}'" class="inline-block px-3 py-2 border-2 border-slate-50 text-slate-50 font-medium text-xs leading-tight uppercase rounded-full hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
                            <i class="text-white bi bi-gear text-lg"></i>
                        </button>
                    {% endif %}
                    
                    {% if returnIcon is defined %}
                    {% else %}
                    <button type="button" onclick="history.back()" class=" px-3 py-2 border-2 border-slate-50 text-slate-50 font-medium text-xs leading-tight rounded-full hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
                        <i class="text-white bi bi-arrow-return-left text-xl"></i>
                    </button>
                    {% endif %}
            
            
            {# </div> #}
        </nav>
    </div>
</div>
