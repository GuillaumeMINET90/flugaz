{{ form_start(form) }}
<div class="form-container-global">
    <div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="container_number" class="form-label inline-block text-gray-600">
                    N° de bouteille <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.new_container,{'disabled':true})}} 
            </div>
        </div>
        <div class="widget-container hidden">
            <div class="form-widget">
                <label for="new_containers_movements_technicien" class="form-label inline-block text-gray-600">
                    Technicien
                </label>
                {{ form_row(form.technicien)}}   
            </div>
        </div>

        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_movements_quantity_injected" class="form-label inline-block text-gray-600">
                    Quantité injectée <span class="italic">(en kg)</span> <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.quantity_injected)}}    
            </div>
        </div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_movements_date" class="form-label inline-block text-gray-600">
                    Date d'intervention <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.date)}}    
            </div>
        </div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_movements_cerfa_number" class="form-label inline-block text-gray-600">
                    N° du Cerfa <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.cerfa_number)}}   
            </div>
        </div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_movements_customer" class="form-label inline-block text-gray-600">
                    Client <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.customer)}}    
            </div>
        </div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_movements_remark" class="form-label inline-block text-gray-600">
                    Remarque
                </label>
                {{ form_row(form.remark)}}    
            </div>
        </div>

        {{ form_row(form._token) }}
        <div class="flex space-x-2 mt-3 mb-6 justify-center">
            <div>
                <button type="button" onclick="window.location.href = '{{ path('app_new_containers_movements_index', {id: container.id}) }}'" class="btn-return bg-blue-600 text-white"> 
                    Tableau
                </button>

                <button type="submit" class="btn-green-validation bg-green-600 text-white">
                    Sauvegarder
                </button>
            </div>
        </div>
    </div>
</div>

{{ form_end(form) }}
