{{ form_start(form) }}

<div class="form-container-global">
    <div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_number" class="form-label inline-block text-gray-600">
                    Numéro de bouteille <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.number)}}    
            </div>
        </div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_gaz" class="form-label inline-block text-gray-600">
                    Type de gaz <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.gaz)}}    
            </div>
        </div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_initial_weight" class="form-label inline-block text-gray-600">
                    Poid du fluide <span class="italic">(en kg)</span> <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.initial_weight)}}   
            </div>
        </div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_purchase_date" class="form-label inline-block text-gray-600">
                    Date d'achat <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.purchase_date)}}    
            </div>
        </div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_purchase_vendor" class="form-label inline-block text-gray-600">
                    Fournisseur <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.vendor)}}    
            </div>
        </div>
        <div class="widget-container">
            <div class="form-widget">
                <label for="new_containers_bill_number" class="form-label inline-block text-gray-600">
                    N° de BL <i class ="font-bold text-red-600">*</i>
                </label>
                {{ form_row(form.bill_number)}}    
            </div>
        </div>
        
        {{ form_row(form._token) }}
        <div class="flex space-x-2 mt-3 mb-12 justify-center">
            <div>
                <button type="button" onclick="window.location.href = '{{ path('app_new_containers_index') }}'" class="btn-return  bg-blue-600 text-white"> 
                    retour
                </button>

                <button type="submit" class="btn-green-validation bg-green-600 text-white">
                    Sauvegarder
                </button>
            </div>
        </div>
    </div>
</div>

{{ form_end(form) }}
