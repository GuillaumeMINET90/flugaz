{% extends 'base.html.twig' %}

{% block title %}New Containers index{% endblock %}

{% block body %}

<div class="container mx-auto px-4">

    <div class="card-menu-bottle-title">
        <h1 >
            Choisir une bouteille
        </h1>
    </div>
  

        {% for nc in newContainers %}
            <div class="flex m-4 flex-row  justify-center ">
                <div class="flew  p-6 rounded-lg shadow-lg bg-slate-50 w-full">
                    <div class="flex flex-col space-y-2 float-left ">
                        <h5 class="text-gray-900 text-xl leading-tight font-medium mb-4 w-80"> <span class="font-bold">{{nc.gaz}}</span> &emsp;&emsp; N° {{nc.number}} </h5>
                            <p class="text-gray-700 text-base mb-4 w-80">
                                {% set val = nc.initialWeight %}
                                    {% for vr in volumeRest %}
                                            {% if nc.id == vr.container %}
                                                {% set val = val - vr.totalQ %}
                                            {% endif %}
                                    {% endfor %}
                                <i> Quantité restante:</i> <span class="font-bold">{{val}}</span> kg   
                            </p>
                    </div>
                    <div class="flex space-x-16 float-right">
                    {% if val < 2 %}
                        <button type="button" onclick="window.location.href = '{{path('app_new_containers_edit', {id:nc.id})}}'" class="return-button">
                            <i class="bi bi-truck text-xl"></i>
                        </button>
                    {% endif %}
                        <button type="button" onclick="window.location.href = '{{path('app_new_containers_movements_index', {id:nc.id})}}'" class="array-button">
                            <i class="bi bi-table text-xl"></i>
                        </button>
                        <button type="button" onclick="window.location.href = '{{path('app_new_containers_movements_new', {id:nc.id})}}'" class="pencil-button">
                            <i class="bi bi-pencil-fill text-xl"></i>
                        </button>
                    </div> 
                </div>
            </div>
        {% else %}
            <div class="flex m-4 flex-row  justify-center ">
                <p class="text-gray-700 p-4 border-y-4 border-gray-200 font-bold text-base mt-12 ">
                    Aucune bouteille de fluide en stock  
                </p>
            </div>
        {% endfor %}


</div>
{% endblock %}
