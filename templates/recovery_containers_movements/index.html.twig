{% extends 'base.html.twig' %}

{% block title %}RecoveryContainersMovements index{% endblock %}

{% block body %}
<div class="container mx-auto mt-24 px-4">
    <div class="grid w-full justify-center">
        <h1 class="text-2xl text-gray-800 font-bold m-4 ">
            Tableau des charges
        </h1>
    </div>
    <div class="grid w-full justify-center">
        <h3 class="text-xl text-gray-500 font-bold m-2 ">
            Bouteille N° {{container.number}}
        </h3>
    </div>

    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <table class="min-w-full text-center">
                        <thead class="border-b bg-white">
                            <tr>
                                <th scope="col" class="text-sm font-bold text-gray-900 px-6 py-2">
                                  Client
                                </th>
                                <th scope="col" class="hiddenxs text-sm font-bold text-gray-900 px-6 py-2">
                                  Charge
                                </th>
                                <th scope="col" class="hiddenxs text-sm font-bold text-gray-900 px-6 py-2">
                                  Date
                                </th>
                                <th scope="col" class="text-sm font-bold text-gray-900 px-6 py-2">
                                  Modifier
                                </th>
                            </tr>
                        </thead class="border-b">
                        <tbody>
                        {% for rcm in recovery_containers_movements %}
                            <tr class="bg-white border-b">
                                <td class="text-sm text-gray-900 font-light px-6 py-2 whitespace-nowrap">
                                  {{ rcm.customer }}
                                </td>
                                <td class="hiddenxs text-sm text-gray-900 font-light px-6 py-2 whitespace-nowrap">
                                  {{ rcm.quantityRecovered }} <span class="text-gray-400"> kg</span> 
                                </td>
                                <td class="hiddenxs text-sm text-gray-900 font-light px-6 py-2 whitespace-nowrap">
                                  {{ rcm.date ? rcm.date|date('Y-m-d') : '' }}
                                </td>
                                <td class="text-sm text-gray-900 font-light px-6 py-2 whitespace-nowrap">
                                {% if app.user.username == rcm.technicien.username %}
                                <button type="button" onclick="window.location.href = '{{ path('app_recovery_containers_movements_edit', {'id': rcm.id}) }}'" class="inline-block px-2 py-1 border-2 border-orange-600 text-orange-700 font-medium leading-tight uppercase rounded-full hover:bg-black hover:bg-opacity-5 transition duration-150 ease-in-out">
                                    <i class="bi bi-arrow-repeat text-lg"></i>
                                </button>
                                {% endif %}
                                </td>
                            </tr class="bg-white border-b">
                            {% else %}
                                <tr class="my-4">
                                    <td colspan="5" class="text-center font-bold my-4" >Aucune charge effectuée</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

        
{% endblock %}
